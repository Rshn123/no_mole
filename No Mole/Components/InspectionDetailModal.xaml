<Window x:Class="No_Mole.Components.InspectionDetailModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Mole.Components"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="InspectionDetailModal" Height="415" Width="615">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Device Details" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
           
            <UniformGrid HorizontalAlignment="Stretch" Rows="1">
                <StackPanel Orientation="Vertical">
                    <Label>Device Name</Label>
                    <!-- Device Name -->
                    <TextBox Height="35" Margin="0,10" Background="#FF2E2E2E" Foreground="White" BorderBrush="Gray" Padding="10" Width="136"/>
                </StackPanel>
                    
                <StackPanel Orientation="Vertical">
                    <Label>Serial Number</Label>
                    <!-- Device Name -->
                    <TextBox Height="35" Margin="0,10" Background="#FF2E2E2E" Foreground="White" BorderBrush="Gray" Padding="10" Width="136"/>
                </StackPanel>

                <!-- Manufacturer Name -->
            </UniformGrid>

            <UniformGrid HorizontalAlignment="Stretch"  Rows="1">
                <StackPanel Orientation="Vertical">
                    <Label>Device Name</Label>
                    <!-- Device Name -->
                    <TextBox Height="35" Margin="0,10" Background="#FF2E2E2E" Foreground="White" BorderBrush="Gray" Padding="10" Width="136"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <Label>Serial Number</Label>
                    <!-- Device Name -->
                    <TextBox Height="35" Margin="0,10" Background="#FF2E2E2E" Foreground="White" BorderBrush="Gray" Padding="10" Width="136"/>
                </StackPanel>

                <!-- Manufacturer Name -->
            </UniformGrid>

        </StackPanel>

        <!-- Continue Button -->
        <Button Grid.Row="2" Content="Continue" Width="100" Height="40" Background="#FF8200FF" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

        <!-- Bottom Text -->
        <TextBlock Grid.Row="2" Text="Don't have a serial number?" Foreground="Gray" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,60,0,0"/>
    </Grid>
</Window>

<Window x:Class="No_Mole.Components.InspectionDetailModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Mole.Components"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="InspectionDetailModal">

    <Window.OpacityMask>
        <!-- Clip the window to create rounded corners -->
        <VisualBrush>
            <VisualBrush.Visual>
                <Border Width="615"
                        Height="415"
                        CornerRadius="10"
                        Background="White"/>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.OpacityMask>
    <!-- Popup Container -->
    <Border Height="415"
            Width="615"
            Background="#1F1F1F"
            BorderBrush="Gray"
            CornerRadius="10"
            BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <DockPanel Grid.Row="0"
                       Margin="0,0,0,5">
                <TextBlock Text="Instrument Details"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>
                <Button Content="X"
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="14"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="ClosePopup_Click"/>
            </DockPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="10,0,10,0">
                <UniformGrid Rows="2"
                             Columns="2"
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,10">
                    <!-- Device Name -->
                    <StackPanel Margin="5"
                                Width="200">
                        <TextBlock Text="Device Name"
                                   Foreground="White"
                                   FontSize="12"
                                   Margin="0,0,0,5"
                                   Opacity="0.8"/>
                        <TextBox Height="30"
                                 Background="#0D0D0D"
                                 Foreground="Gray"
                                 BorderThickness="1"
                                 BorderBrush="Gray"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Manufacturer -->
                    <StackPanel Margin="5"
                                Width="200">
                        <TextBlock Text="Manufacturer"
                                   Foreground="White"
                                   FontSize="12"
                                   Margin="0,0,0,5"
                                   Opacity="0.8"/>
                        <TextBox Height="30"
                                 Background="#0D0D0D"
                                 Foreground="Gray"
                                 BorderThickness="1"
                                 BorderBrush="Gray"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Batch -->
                    <StackPanel Margin="5"
                                Width="200">
                        <TextBlock Text="Set Number"
                                   Foreground="White"
                                   FontSize="12"
                                   Margin="0,0,0,5"
                                   Opacity="0.8"/>
                        <TextBox Height="30"
                                 Background="#0D0D0D"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="Gray"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Serial Number -->
                    <StackPanel Margin="5"
                                Width="200">
                        <TextBlock Text="Serial Number *"
                                   Foreground="White"
                                   FontSize="12"
                                   Margin="0,0,0,5"
                                   Opacity="0.8"/>
                        <TextBox  x:Name="SerialNumberTextBox"
                                  Height="30"
                                  Background="#0D0D0D"
                                  Foreground="White"
                                  BorderThickness="1"
                                  BorderBrush="Gray"
                                  Padding="5"/>
                        <TextBlock Text="What is a serial number?"
                                   Foreground="#787878"
                                   FontSize="10"
                                   Margin="0,2,0,0">
                            <TextBlock.ToolTip>
                                <ToolTip Background="Black">
                                    <Border Background="Black"
                                            CornerRadius="5"
                                            Padding="10"
                                            MaxWidth="300"
                                            BorderThickness="0">
                                        <TextBlock Foreground="White"
                                                   FontSize="12"
                                                   TextWrapping="Wrap">
                                            It is a unique identifier assigned by the manufacturer, typically printed on the device itself or included in its documentation. This serial number is used for tracking, support, and warranty purposes.
                                            If you don't have a serial number, enter your own serial number. It is used for creating a folder name.
                                        </TextBlock>
                                    </Border>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>
                </UniformGrid>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">
                <Button Content="Continue"
                        Width="200"
                        Height="40"
                        Background="#8E44AD"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Margin="0,10"
                        Click="Button_Click"/>
                <TextBlock Text="Don't have a serial number?"
                           Foreground="#787878"
                           FontSize="12"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

<Window x:Class="No_Mole.Components.SavedFileShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Mole.Components"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#1F1F1F"          
        WindowStyle="None"
        Title="SavedFileShow" Height="450" Width="800">
    <Grid>
        <DockPanel Grid.Row="0"
            Margin="0,0,10,0">
            <Button Content="X"
                Width="30"
                Height="30"
                Foreground="White"
                Background="Transparent"
                BorderBrush="Transparent"
                FontSize="14"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Close_Popup_Click"/>
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="390">
            <WrapPanel x:Name="ImageWrapPanel" />
        </ScrollViewer>
    </Grid>
</Window>

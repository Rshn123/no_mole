<Window x:Class="No_Mole.Components.WarningModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Mole.Components"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#1F1F1F"
        WindowStyle="None"
        Title="WarningModal" Height="300" Width="600">

    <StackPanel Orientation="Vertical">

        <StackPanel HorizontalAlignment="Center" Margin="0 100">
            <TextBlock Foreground="White" FontSize="18">All photos and videos taken during this RVI session will be deleted.</TextBlock>
            <TextBlock Foreground="White" FontSize="18" HorizontalAlignment="Center">Are you sure you want to exit?</TextBlock>

            <UniformGrid Columns="2" Margin="0 30">
                <Button Height="30" Background="Purple"  Margin="30 0" FontSize="20" Click="YesButton">Yes</Button>
                <Button Height="30" Background="Red" Margin="30 0" FontSize="20" Click="NoButton">No</Button>
            </UniformGrid>

        </StackPanel>
    </StackPanel>
</Window>

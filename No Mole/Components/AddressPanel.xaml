        <Image Source="../Resources/Icons/no_mole_logo.png" 
               Width="140" Height="140" Margin="0,0,0,20" />

        
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="📧" FontSize="14" Foreground="White" Margin="0,0,10,0"/>
            <TextBlock FontSize="14" Foreground="White">
                <Run Text="info@nutrace.net"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
            <TextBlock Text="📞" FontSize="14" Foreground="White" Margin="0,0,10,0"/>
            <TextBlock FontSize="14" Foreground="White">
                <Run Text="(866) 681 0944"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
            <TextBlock Text="📍" FontSize="14" Foreground="White" Margin="0,0,10,0"/>
            <TextBlock FontSize="14" Foreground="White">
                <Run Text="4310 Enterprise Dr"/>
                <LineBreak/>
                <Run Text="Winston-Salem, NC, 27106"/>
            </TextBlock>
        </StackPanel>
    </StackPanel>

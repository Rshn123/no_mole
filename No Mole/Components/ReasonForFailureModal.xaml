<Page x:Class="No_Mole.Components.ReasonForFailureModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:No_Mole.Components"
        mc:Ignorable="d"
        
        Title="ReasonForFailureModal"
         Background="#1F1F1F"
        Height="415"
        Width="615">
    <Grid>
        
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="150 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White"
                       FontSize="20"
                       Margin="0 10">Reason for failure</TextBlock>
                <TextBlock Foreground="Red" FontSize="20">*</TextBlock>
            </StackPanel>
            <TextBox x:Name="NotesTextBox"
                     Height="80"
                     Background="#2C2C2C"
                     Foreground="White"
                     BorderThickness="1"
                     BorderBrush="Gray"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Padding="5"
                     Margin="0 0 0 20"/>

            <TextBlock x:Name="Error_Message" Foreground="Red" FontSize="15" HorizontalAlignment="Center" Margin="0 0 0 10">Please enter reason for failure!</TextBlock>

            <Button
                    Width="300"
                    Height="40 "
                    Background="#8E44AD"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Click="Submit_Button_Click">
                Submit
            </Button>

        </StackPanel>

    </Grid>
</Page>
